<fieldset>
<legend>Job Detail</legend>
<br/><br />
  <div class="form_row">
  <b>Title:</b>
  <%=h @job.title %>
</div>

<div class="form_row">
  <b>Description:</b>
  <%=h @job.description %>
</div>

<div class="form_row">
  <b>Country:</b>
  <% if @job.country_id.eql?(nil) %>
  No Country selected
  <% else %>
  <%=h @job.country.name %>
  <% end %>
</div>

<div class="form_row">
  <b>City:</b>
  <%=h @job.city %>
</div>

<div class="form_row">
  <b>Type:</b>
  <% if @job.type_id.eql?(nil) %>
  No Type selected
  <% else %>
  <%=h @job.type.name %>
  <% end %>
</div>

<div class="form_row">
  <b>Currency:</b>
  <% if @job.currency_id.eql?(nil) %>
  No Currency selected
  <% else %>
  <%=h @job.currency.name %>
  <% end %>
</div>

<div class="form_row">
  <b>Rate:</b>
  <% if @job.rate_id.eql?(nil) %>
  No Rate selected
  <% else %>
  <%=h @job.rate.name %>
  <% end %>
</div>

<div class="form_row">
  <b>Start date:</b>
  <%=h @job.start_date %>
</div>

<div class="form_row">
  <b>End date:</b>
  <%=h @job.end_date %>
</div>

<div class="form_row">
  <b>Skills:</b>
  <% @job.skills.each do |t| %>
  <%=h t.name %>
  <% end %>
</div>
</fieldset>
<fieldset>
  <legend>List of Job Applicants</legend>
  <br /><br />
  <% if @applicants.blank? %>
  <b>There Are No Applicants Applied For This Job Yet.</b>
  <% else %>
  <% @applicants.each do |applicant| %>
  <br /><br />
   <div class="form_row">
    <b>Email:</b>
    <%=h applicant.email %>
  </div>
  <div class="form_row">
    <b>Comment:</b>
    <%=h applicant.comment %>
  </div>
  <div class="form_row">
    <b>Linkedin URL:</b>
    <%=h applicant.url %>
  </div>
  <% end %>
  <% end %>
  </fieldset>

<%#= link_to 'Edit', edit_job_path(@job) %> |
<%= link_to 'Back', jobs_path %>