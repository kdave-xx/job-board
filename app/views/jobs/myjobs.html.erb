
<h1>Listing My Jobs</h1>
<fieldset>
<table width="100%" border="0" cellpadding="0" cellspacing="0">
  <tr>
    <th width="10">Title</th>
    <th width="20">Description</th>
    <th width="20">Country</th>
    <th width="10">City</th>
    <th width="10">Type</th>
    <th width="20">Currency</th>
    <th width="20">Rate</th>
    <th width="20">Start date</th>
    <th width="20">End date</th>
    <th width="30">Skills</th>
    <th width="10"></th>
    <th width="10"></th>
  </tr>

<% current_user.jobs.each do |job| %>
  <tr>
    <td><%=h link_to job.title.capitalize, job %></td>
    <td><%=h job.description %></td>
    <td><%=h job.country.name %></td>
    <td><%=h job.city %></td>
    <td><%=h job.type.name %></td>
    <td><%=h job.currency.name %></td>
    <td><%=h job.rate.name %></td>
    <td><%=h job.start_date %></td>
    <td><%=h job.end_date %></td>
    <td><% job.skills.each do |t| %>
         <%=h t.name %>
         <% end %></td>
    
    <td><%= link_to 'Edit', edit_job_path(job) %></td>
    <td><%= link_to 'Destroy', job, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />
<b><%= will_paginate @jobs %></b>
<div class="clear"></div>
</fieldset>
<%= link_to 'New job', new_job_path %>