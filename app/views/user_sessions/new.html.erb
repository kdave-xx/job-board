<h1>Login</h1>
<fieldset>
  
<% form_for @user_session, :url => user_session_path do |f| %>
  <%= f.error_messages %>

<legend>Enter Your Details</legend>
<br /><br />

<table width="100%" border="0px">
  <tr>
    <td width="50%">
<div class="left">
<div class="form_row">
  <label for="login">Login:</label>
  <%= f.text_field :login %>
</div>
  <br />
  <div class="form_row">
   <label for="password">Password:</label>
  <%= f.password_field :password %>
  </div>
 
  <div class="form_row">
   <label for="password">Stay signed in </label>
    <%= f.check_box :remember_me %>
  </div> 
  <br />
   <div class="form_row">
  <%= f.submit "Sign in", :class => "submit" %>
   </div>
 <div style="margin-left: 30px;">
    <%= link_to "Forget password", new_password_reset_url  %><br />
 </div>
</div>
      <br /><br />
    </td>
<% end %>
    <td width="50%">
      <h3>As a job owner to create a new account?</h3>
    <%= link_to "Click here", new_user_path %>

    </td>
  </tr>
</table>
  
</fieldset>